{
	"schemaVersion": 1,
	"id": "xpvault",
	"version": "${version}",
	"name": "XP Vault",
	"description": "This mod allows players to store their experience points in a Vault for future use.",
	"authors": [
		"Amelco"
	],
	"contact": {
		"homepage": "mailto:contato@matheusamelco.com",
		"sources": "https://github.com/MatheusAmelco/xp-vault"
	},
	"license": "CC0-1.0",
	"icon": "assets/xpvault/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.matheusamelco.XPVault"
		],
		"client": [
			"com.matheusamelco.XPVaultClient"
		]
	},
	"mixins": [
		"xpvault.mixins.json",
		{
			"config": "xpvault.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.11",
		"minecraft": "~1.21",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}